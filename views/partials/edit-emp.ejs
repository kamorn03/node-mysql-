                <div class="form-group col-md-4">
                    <label for="Name"> Name</label>
                    <input type="text" class="form-control" name="name" id="name" value="<%= employees.name %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="last-name">location</label>
                    <input type="text" class="form-control" name="location" id="location" value="<%= employees.location %>" required>
